<% is_regulation = request.original_fullpath.include? "/regulations" %>
<div class="column">
  <article class="card card--process">
    <% if is_regulation %>
      <%= link_to "/processes/"+participatory_process.id.to_s, class: "card__link" do %>
            <div class="card__image-top"
                style="background-image:url(<%= participatory_process.hero_image.url %>)"></div>
      <% end %>
    <% else %>
      <%= link_to participatory_process_path(participatory_process), class: "card__link" do %>
            <div class="card__image-top"
                style="background-image:url(<%= participatory_process.hero_image.url %>)"></div>
      <% end %>
    <% end %>
    <div class="card__content">
        <% if is_regulation %>
          <%= link_to "/processes/"+participatory_process.id.to_s, class: "card__link" do %>
            <h4 class="card__title"><%= translated_attribute participatory_process.title %></h4>
          <% end %>
        <% else %>
          <%= link_to participatory_process_path(participatory_process), class: "card__link" do %>
            <h4 class="card__title"><%= translated_attribute participatory_process.title %></h4>
        <% end %>
      <% end %>
      <p class="card__desc"><%== html_truncate(translated_attribute(participatory_process.short_description), length: 630, separator: '...') %></p>
    </div>
    <div class="card__footer">
      <div class="card__support">
        <% if participatory_process.active_step %>
          <span class="card--process__small">
            <%= t("participatory_processes.participatory_process.active_step", scope: "layouts.decidim") %>
            <strong><%= translated_attribute participatory_process.active_step.title %></strong>
          </span>
        <% end %>
        <span class="card--process__small"></span>
        <% if is_regulation %>
          <%= link_to "/processes/"+participatory_process.id.to_s, class: "card__button button small" do %>
            <%= t("participatory_processes.participatory_process.take_part", scope: "layouts.decidim") %>
          <% end %>
        <% else %>
          <%= link_to participatory_process_path(participatory_process), class: "card__button button small" do %>
            <%= t("participatory_processes.participatory_process.take_part", scope: "layouts.decidim") %>
          <% end %>
        <% end %>
      </div>
    </div>
  </article>
</div>
