<%# if has meetgins, show the link to them #%>
<% 
is_landing_page = !(request.original_fullpath.to_s.include? "/f/")

related_feature = Decidim::Feature.where(participatory_space_id: params[:id], manifest_name: "meetings").where.not(published_at: nil).map(&:id).first
has_meetings = Decidim::Meetings::Meeting.where(decidim_feature_id: related_feature).where("DATE(start_time) > ? AND DATE(end_time) > ?", Date.today, Date.today).exists?

is_assembly = (request.original_fullpath.to_s.include? "/assemblies")
if !is_assembly
  if is_landing_page %>
      <% if has_meetings %>
              <a href="/processes/<%= params[:id] %>/f/<%= related_feature %>">
                  <div class="callout warning next-meetings">
                      <%= t(".meetings_available")%>
                  </div>
              </a>
      <% end %>
  <% end 
end %>
<br><br>
<% if attached_to.attachments.any? %>
  <div class="row attachments">
    <div class="columns large-12">
      <%= render partial: "documents", locals: { documents: attached_to.documents } %>
      <%= render partial: "photos", locals: { photos: attached_to.photos } %>
    </div>
  </div>
<% end %>
